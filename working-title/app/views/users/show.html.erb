<h3><%= @user.name %></h3>
<h3><%= @user.email %></h3>

<% if current_user == @user %>
  <%= link_to "Edit Profile", edit_user_path(@user) %>
  <%= link_to("Delete Account", user_path(@user), method: :delete) %>

  <h3>Your Projects:</h3>
  <% @user.projects.each do |project| %>
  <p><%= link_to "#{project.name}", project_path(project) %></p>
  <% end %>
<% end %>


